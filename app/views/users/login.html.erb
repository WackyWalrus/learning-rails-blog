<h1>Login</h1>

<%= form_for User.new, url: '/login' do |form| %>
	<div class="field-container">
		<%= form.label :email %>
		<%= form.text_field :email %>
	</div>
	<div class="field-container">
		<%= form.label :password %>
		<%= form.password_field :password %>
	</div>
	<%= form.submit "Login" %>
<% end %>