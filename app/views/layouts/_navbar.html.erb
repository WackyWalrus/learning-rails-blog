<% current_user %>

<navigation>
	<div class="navbar">
		<ul>
			<li><a href="/">Home</a></li>
			<% if @current_user %>
				<li><%= link_to "Logout", logout_url, method: :post %></li>
				<li class="pull-right"><%= link_to "Make a new Post", new_post_url %></li>
			<% else %>
				<li><%= link_to "Log In", login_url %></li>
				<li><%= link_to "Sign Up", new_user_url %></li>
			<% end %>
		</ul>
	</div>
</navigation>